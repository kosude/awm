{
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "(lldb) Launch",
            "program": "${workspaceFolder}/build/awm/awm",
            "args": [
                "-p",
                "tests/config"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build project",
            "env": {
                "DISPLAY": ":1"
            }
        },
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/awm/awm",
            "args": [
                "-p",
                "tests/config"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build project",
            "environment": [
                {
                    "name": "DISPLAY",
                    "value": ":1"
                }
            ]
        }
    ],
    "version": "2.0.0"
}
